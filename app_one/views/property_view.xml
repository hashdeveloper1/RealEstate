<odoo>
    <record id="property_view_tree" model="ir.ui.view">
         <field name="name">Property Tree</field>
         <field name="model">property</field>
         <field name="arch" type="xml">
           <tree multi_edit="1"  edit="1" create="1" delete="1" class="header_custom" decoration-danger="(is_late)">
               <field name="name"/>
               <field name="owner_id"/>
               <field name="state"/>
               <field name="postcode"/>
               <field name="date_availability"/>
               <field name="selling_price"/>
               <field name="garden"/>
               <field name="facades"/>
               <field name="garden_area"/>
               <field name="active"/>
               <field name="is_late" invisible="1"/>
               <field name="bedrooms" optional="1"/>
               <field name="garage" optional="1"/>
               <field name="tag_ids" optional="1"/>
           </tree>
         </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
         <field name="name">Property Form</field>
         <field name="model">property</field>
         <field name="arch" type="xml">
           <form>
               <header>
                   <button  name="action" string="Action" type="object" class="btn22"/>
                   <button  name="action_draft" string="Set To Draft" type="object" class="btn22"
                            attrs="{'invisible': [('state', '==', 'draft')]}"/>
                   <button  name="action_pending" type="object" class="btn23" string="Pending"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                   <button  name="action_done" type="object" class="btn24" string="Done"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                   <field name="state" widget="statusbar" statusbar_visible="draft,pending,done,closed"/>
               </header>
              <sheet>
                      <div class="oe_title">
                          <label for="ref"/>
                          <h1>
                              <field name="ref"/>
                          </h1>
                          <label for="name"/>
                          <h3>
                              <field name="name"/>
                          </h3>
                      </div>
                  <group>
                      <group string="General Info.">
                          <field name="owner_id"/>
                          <field name="owner_address"/>
                          <field name="owner_phone"/>
                          <field name="date_availability" required="1"/>
                          <field name="expected_selling_date"/>
                          <field name="postcode"/>
                          <field name="expected_price"/>
                          <field name="selling_price"/>
                          <field name="diff"/>
                          <field name="is_late" invisible="1"/>
                          <field name="living_area"/>
                          <field name="facades"/>
                      </group>
                      <group string="Additional Info.">
                           <field name="garage" />
                           <field name="garden"/>
                           <field name="state"/>
                           <field name="bedrooms" />
                           <field name="garden_area"/>
                           <field name="garden_orientation"/>
                           <field name="active"/>
                           <field name="tag_ids" widget="many2many_tags"/>
                      </group>
                  </group>
                  <group>
                      <field name="description" required="1"/>
                  </group>
                  <notebook>
                      <page string="Bedrooms">
                          <field name="property_line_ids" widget="section_and_note_one2many">
                             <tree editable="bottom">
                                 <field name="description"/>
                                 <field name="area"/>
                             </tree>
                          </field>
                      </page>
                  </notebook>
              </sheet>
               <div class="oe_chatter" >
                   <field name="message_follower_ids"/>
                   <field name="activity_ids"/>
                   <field name="message_ids"/>
               </div>
           </form>
         </field>
    </record>

