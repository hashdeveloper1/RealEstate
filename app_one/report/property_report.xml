<odoo>

    <record id="property_report" model="ir.actions.report" >
       <field name="name">property report</field>
       <field name="model">property</field>
       <field name="report_type">qweb-html</field>  <!--qweb-pdf or qweb-html  -->
       <field name="binding_model_id" ref="model_property"/>
       <field name="binding_type">report</field>  <!-- this field have to type  [ report - [default] no write ]-->
       <field name="report_name">app_one.report_style_template_line</field> <!-- this field take value = "addon_name.id"  this id for style template and this id must be uneiq-->
       <!--       <field name="paperformat_id" ref="app_one.paperformat_custom_temp_line"></field>-->
    </record>

    <template id="report_style_template_line">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="app_one.report_lines_document"/>
            </t>
       </t>
    </template>

    <template id="report_lines_document">
        <t t-call="web.external_layout">
            <h1>Property Report</h1>
            <table class="table table-condensed" style="width:100%;font-family: 'Poppins', sans-serif;  border: 1px solid #000000; text-align: center">
                <thead>
                    <th colspan="4">General Information</th>
                </thead>
                <tbody>
                    <td>Name</td>
                    <td><t t-esc="o.name"/></td>
                    <td>Postcode</td>
                    <td><t t-esc="o.postcode"/></td>
                </tbody>
                <thead>
                    <th colspan="4">Additional Information</th>
                </thead>
                <tbody>
                    <td>Owner</td>
                    <td><t t-esc="o.owner_id.name"/></td>
                    <td>Phone</td>
                    <td><t t-esc="o.owner_phone"/></td>
                </tbody>`
            </table>

            <table class="table table-condensed" style="width:100%;font-family: 'Poppins', sans-serif;  border: 1px solid #000000; text-align: center">
                <thead>
                    <th>Description</th>
                    <th>Area(m2)</th>
                </thead>
                <tbody>
                    <t t-foreach="o.property_line_ids" t-as="line">
                        <tr>
                            <td><span t-field="line.description"/></td>
                            <td><span t-field="line.area"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>

